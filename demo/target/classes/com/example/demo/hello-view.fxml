<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="30.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.HelloController"
      stylesheets="/com/example/demo/styles.css">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>

    <Label text="Learning Management System" styleClass="home-title" />
    <Label text="Welcome to your campus portal" styleClass="home-subtitle" />
    <HBox alignment="CENTER" spacing="20.0">
        <Button fx:id="studentLoginBtn" text="Student Login" styleClass="home-login-button" />
        <Button fx:id="lecturerLoginBtn" text="Lecturer Login" styleClass="home-login-button-alt" />
    </HBox>
</VBox>
